<?xml version="1.0" encoding="utf-8"?>
<Feature>
    <Libname>libperfconfigfeature.so</Libname>
    <Name>PerfConfigFeature</Name>
    <Triggers>
        <Trigger>
            <Primary>true</Primary>
            <AsyncId>VENDOR_HINT_ACTIVITY_START</AsyncId>
            <AsyncType>0</AsyncType>
        </Trigger>
        <Trigger>
            <Primary>true</Primary>
            <AsyncId>VENDOR_HINT_ACTIVITY_RESUME</AsyncId>
            <AsyncType>0</AsyncType>
        </Trigger>
        <Trigger>
            <Primary>false</Primary>
            <AsyncId>VENDOR_HINT_ACTIVITY_PAUSE</AsyncId>
            <AsyncType>0</AsyncType>
        </Trigger>
    </Triggers>
    <Configs>
        <Enable>1</Enable>
        <ConfigPath>/vendor/etc/perf/perf_config.xml</ConfigPath>
    </Configs>
</Feature>
